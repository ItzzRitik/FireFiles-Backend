{
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
		"$": false,
		"Noty": false
    },
    "parserOptions": {
        "ecmaVersion": 2019
    },
    "rules": {
        "arrow-parens": ["error", "always"],
        "indent": ["error", "tab"],
        "linebreak-style": ["error", "unix"],
        "object-curly-spacing": ["error", "always"],
        "quotes": ["error", "single"],
        "rest-spread-spacing": ["error", "never"],
        "semi": ["error", "always"]
    }
}